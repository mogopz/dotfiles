[user]
name = mog
email = github@moop.dev
signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIO1Vuk70Pio7AeO/2zkPmploRMIk2FxQeANDub0x32sH
[core]
excludesfile = ~/.gitignore
pager = delta
[interactive]
diffFilter = delta --color-only
[gpg]
format = ssh
[gpg "ssh"]
program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[commit]
gpgsign = true
[credential "https://github.com"]
helper =
helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
helper =
helper = !/opt/homebrew/bin/gh auth git-credential
[pull]
rebase = true
[push]
default = upstream
followTags = false
[log]
follow = true
abbrevCommit = true
[commit]
gpgsign = true
[tag]
gpgSign = true
[fetch]
prune = true
[merge]
conflictstyle = diff3
[diff]
colorMoved = default
