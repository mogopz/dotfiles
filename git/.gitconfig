[user]
  name = mog
  email = github@moop.dev
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIO1Vuk70Pio7AeO/2zkPmploRMIk2FxQeANDub0x32sH
[branch]
  sort = -committerdate
[color]
  ui = true
[column]
  ui = auto
[commit]
  gpgsign = true
[core]
  excludesfile = ~/.gitignore
  editor = nvim
[fetch]
  all = true
  prune = true
  pruneTags = true
[gpg]
  format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[init]
  defaultBranch = main
[log]
  abbrevCommit = true
  follow = true
[pull]
  rebase = true
[push]
  autoSetupRemote = true
  default = simple
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true
[rerere]
  autoupdate = true
  enabled = true
[tag]
  gpgSign = true
  sort = version:refname